<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="PasswordPopup" owl="1">
        <div class="popup popup-text-input">
            <div class="popup-content">
                <div class="popup-title">
                    <t t-esc="props.title"/>
                </div>
                <div class="popup-body">
                    <input type="password" t-model="payload" placeholder="Enter Password" class="input"/>
                </div>
                <div class="popup-footer">
                    <button class="button confirm" t-on-click="confirm">Authorize</button>
                </div>
            </div>
        </div>
    </t>
</templates>
